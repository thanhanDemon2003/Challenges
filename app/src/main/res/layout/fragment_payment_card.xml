<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragment.PaymentCard"
    android:background="@color/white">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtTitle"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thanh toán"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cardImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="19dp"
                    android:src="@drawable/card" />

                <ImageView
                    android:id="@+id/checkCard"
                    android:layout_width="40dp"
                    android:layout_height="31dp"
                    android:layout_above="@+id/textCvv"
                    android:layout_alignEnd="@+id/cardImage"
                    android:layout_marginEnd="273dp"
                    android:layout_marginBottom="103dp" />

                <TextView
                    android:id="@+id/textCard"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/cardImage"
                    android:layout_alignEnd="@+id/cardImage"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="-6dp"
                    android:layout_marginBottom="-46dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/nameCard"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/cardImage"
                    android:layout_alignEnd="@+id/cardImage"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="-6dp"
                    android:layout_marginBottom="-46dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/cardImage"
                    android:layout_marginStart="-330dp"
                    android:layout_marginBottom="19dp"
                    android:layout_toEndOf="@id/cardImage"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/textCvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/cardImage"
                    android:layout_alignBottom="@id/cardImage"
                    android:layout_marginEnd="170dp"
                    android:layout_marginBottom="19dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số thẻ"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edtThe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày kết thúc"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edtCvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThanhtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:layout_marginTop="30dp"
        android:background="@color/cam123"
        android:textColor="@color/white"/>


</LinearLayout>
